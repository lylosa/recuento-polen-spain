# Requisitos: pip install selenium webdriver-manager pandas
# Ejecutar en Jupyter (Chrome). Mantén la ventana visible (headless=False) para depurar.

import pandas as pd, time, os, datetime, traceback
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.action_chains import ActionChains
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from webdriver_manager.chrome import ChromeDriverManager

# ---------------- Driver ----------------
def start_driver(headless=False):
    opts = Options()
    if headless:
        opts.add_argument("--headless=new")
    opts.add_argument("--window-size=1400,1000")
    service = Service(ChromeDriverManager().install())
    return webdriver.Chrome(service=service, options=opts)

# ---------------- util ----------------
def safe_click(driver, el, pause=0.18):
    try:
        driver.execute_script("arguments[0].scrollIntoView({block:'center'});", el)
        driver.execute_script("arguments[0].click();", el)
        time.sleep(pause)
        return True
    except:
        try:
            el.click()
            time.sleep(pause)
            return True
        except:
            return False

def js_click(driver, el):
    try:
        driver.execute_script("arguments[0].dispatchEvent(new MouseEvent('mousedown',{bubbles:true}));"
                              "arguments[0].dispatchEvent(new MouseEvent('mouseup',{bubbles:true}));"
                              "arguments[0].dispatchEvent(new MouseEvent('click',{bubbles:true}));", el)
        time.sleep(0.16)
        return True
    except:
        return False

def action_move_and_click(driver, el):
    try:
        ActionChains(driver).move_to_element(el).pause(0.08).click(el).perform()
        time.sleep(0.18)
        return True
    except:
        return False

# ---------------- obtener estaciones ----------------

def get_all_station_names(driver, timeout=12):
    """
    Intenta recoger todos los nombres visibles del dropdown de estaciones.
    Devuelve lista de strings (vacía si no detecta nada).
    """
    try:
        dd = WebDriverWait(driver, timeout).until(
            EC.presence_of_element_located((By.XPATH, "//h2[contains(., 'SELECCIONAR ESTACIÓN')]/following::p-dropdown[1]"))
        )
        trigger = dd.find_element(By.CSS_SELECTOR, ".p-dropdown-trigger")
        safe_click(driver, trigger, 0.35)

        ul = WebDriverWait(driver, timeout).until(EC.visibility_of_element_located((By.CSS_SELECTOR, "ul.p-dropdown-items, div.p-dropdown-items-wrapper, div.p-dropdown-items")))
        items = ul.find_elements(By.CSS_SELECTOR, "li.p-dropdown-item, .p-dropdown-item, li")
        names = []
        for it in items:
            try:
                txt = (it.get_attribute("aria-label") or it.text or it.get_attribute("data-label") or "").strip()
                if txt:
                    names.append(txt)
            except:
                continue

        if not names:
            raw = ul.text or ""
            for line in raw.splitlines():
                s = line.strip()
                if s: names.append(s)

        try:
            driver.execute_script("document.body.click();")
        except:
            pass

        return list(dict.fromkeys([n for n in names if n]))
    except Exception as e:
        print("get_all_station_names fallo:", str(e))
        try:
            driver.execute_script("document.body.click();")
        except:
            pass
        return []


def select_station(driver, name, timeout=12):
    """
    Selecciona la estación cuyo texto contenga 'name' (case-insensitive).
    Más robusta: abre dropdown, busca por aria-label/text/data-label, scroll dentro del panel y clic.
    """
    try:
        dd = WebDriverWait(driver, timeout).until(
            EC.presence_of_element_located((By.XPATH, "//h2[contains(., 'SELECCIONAR ESTACIÓN')]/following::p-dropdown[1]"))
        )
        trigger = dd.find_element(By.CSS_SELECTOR, ".p-dropdown-trigger")
        safe_click(driver, trigger, 0.35)

        ul = WebDriverWait(driver, timeout).until(EC.visibility_of_element_located((By.CSS_SELECTOR, "ul.p-dropdown-items, div.p-dropdown-items-wrapper, div.p-dropdown-items")))
        items = ul.find_elements(By.CSS_SELECTOR, "li.p-dropdown-item, .p-dropdown-item, li")

        target = None
        lower_name = (name or "").strip().lower()
        for it in items:
            try:
                txt = (it.get_attribute("aria-label") or it.text or it.get_attribute("data-label") or "").strip()
                if txt and lower_name in txt.lower():
                    target = it
                    break
            except:
                continue

        if target is None:
            try:
                driver.execute_script("arguments[0].scrollTop = 0;", ul)
                height = driver.execute_script("return arguments[0].scrollHeight;", ul)
                step = max(200, int(height // 6))
                pos = 0
                while pos < height and target is None:
                    driver.execute_script("arguments[0].scrollTop = arguments[1];", ul, pos)
                    time.sleep(0.15)
                    items = ul.find_elements(By.CSS_SELECTOR, "li.p-dropdown-item, .p-dropdown-item, li")
                    for it in items:
                        try:
                            txt = (it.get_attribute("aria-label") or it.text or it.get_attribute("data-label") or "").strip()
                            if txt and lower_name in txt.lower():
                                target = it
                                break
                        except:
                            continue
                    pos += step
            except:
                pass

        if target:
            try:
                safe_click(driver, target, 0.25)
                time.sleep(0.25)
                try:
                    driver.execute_script("document.body.click();")
                except:
                    pass
                return True
            except Exception as e:
                print("select_station click fallo:", str(e))
        else:
            visible_texts = []
            try:
                for it in items:
                    try:
                        visible_texts.append((it.get_attribute("aria-label") or it.text or it.get_attribute("data-label") or "").strip())
                    except:
                        continue
            except:
                pass
            print(f"select_station: no encontró '{name}'. Items visibles ejemplo: {visible_texts[:12]}")
    except Exception as e:
        print("select_station fallo:", str(e))
    finally:
        try:
            driver.execute_script("document.body.click();")
        except:
            pass
    return False

# ---------------- multiselect polen (seleccionar una sola vez) ----------------
def select_all_polens_once(driver, attempts=2):
    # intenta abrir y marcar todo; si falla, reintenta 'attempts' veces
    for i in range(attempts):
        try:
            trigger = WebDriverWait(driver, 8).until(EC.element_to_be_clickable((By.CSS_SELECTOR, "p-multiselect .p-multiselect-trigger")))
            safe_click(driver, trigger, 0.25)
            time.sleep(0.18)
            # marcar todos mediante click en cada item del panel
            panel = WebDriverWait(driver, 5).until(EC.presence_of_element_located((By.CSS_SELECTOR, "div.p-multiselect-panel")))
            items = panel.find_elements(By.CSS_SELECTOR, "li.p-multiselect-item")
            for it in items:
                try:
                    box = it.find_element(By.CSS_SELECTOR, ".p-checkbox-box")
                    aria = box.get_attribute("aria-checked")
                    if aria != "true":
                        safe_click(driver, box, 0.06)
                except:
                    try:
                        safe_click(driver, it, 0.06)
                    except:
                        pass
            time.sleep(0.18)
            driver.execute_script("document.body.click();")
            time.sleep(0.12)
            # comprobar someramente si hay al menos un elemento marcado en el panel (abrir y mirar)
            safe_click(driver, trigger, 0.18)
            panel2 = driver.find_elements(By.CSS_SELECTOR, "div.p-multiselect-panel")
            ok = False
            if panel2:
                try:
                    listed = panel2[-1].find_elements(By.CSS_SELECTOR, "li.p-multiselect-item")
                    if listed and len(listed) > 0:
                        # si al menos un checkbox aparece con aria-checked true se asume OK
                        for it in listed:
                            try:
                                box = it.find_element(By.CSS_SELECTOR, ".p-checkbox-box")
                                if box.get_attribute("aria-checked") == "true":
                                    ok = True
                                    break
                            except:
                                continue
                except:
                    ok = True
            driver.execute_script("document.body.click();")
            if ok:
                return True
        except Exception:
            time.sleep(0.25)
            continue
    return False

# ---------------- NUEVA: lectura actual de rango (solo lectura) ----------------
def read_current_range_values(driver):
    try:
        el_from = driver.find_element(By.ID, "calendarFrom")
        el_to = driver.find_element(By.ID, "calendarTo")
        v_from = (el_from.get_attribute("value") or "").strip()
        v_to = (el_to.get_attribute("value") or "").strip()
        return v_from, v_to
    except:
        return "", ""

# ---------------- datepicker helpers (foco en click real) ----------------
def open_datepicker_button_for_input(driver, input_el):
    try:
        parent = driver.execute_script("return arguments[0].parentElement || arguments[0].parentNode;", input_el)
        if parent:
            btns = parent.find_elements(By.CSS_SELECTOR, "button.p-datepicker-trigger, button.ui-datepicker-trigger, button.p-button")
            for b in btns:
                if b.is_displayed():
                    if safe_click(driver, b, 0.25): return True
        # fallback click input to open
        if safe_click(driver, input_el, 0.25): return True
    except:
        pass
    return False

def navigate_datepicker_to(driver, target_date):
    try:
        panels = driver.find_elements(By.CSS_SELECTOR, ".p-datepicker-panel, .ui-datepicker, .p-calendar, .p-datepicker")
        for p in panels:
            if not p.is_displayed(): continue
            header = None
            for sel in [".p-datepicker-title", ".ui-datepicker-title", ".ui-datepicker-header", ".p-calendar-header"]:
                try:
                    header = p.find_element(By.CSS_SELECTOR, sel)
                    if header and header.text.strip(): break
                except:
                    header = None
            if not header: continue
            txt = header.text.strip().lower()
            months_en = {m.lower(): i+1 for i,m in enumerate(['January','February','March','April','May','June','July','August','September','October','November','December'])}
            months_es = {m.lower(): i+1 for i,m in enumerate(['enero','febrero','marzo','abril','mayo','junio','julio','agosto','septiembre','octubre','noviembre','diciembre'])}
            parsed_month = None; parsed_year = None
            for token in txt.replace(',', ' ').split():
                low = token.strip()
                if low.isdigit() and int(low) > 1900:
                    parsed_year = int(low)
                elif low in months_en:
                    parsed_month = months_en[low]
                elif low in months_es:
                    parsed_month = months_es[low]
            if not (parsed_month and parsed_year): return True
            cur = datetime.date(parsed_year, parsed_month, 1)
            target = datetime.date(target_date.year, target_date.month, 1)
            diff = (target.year - cur.year)*12 + (target.month - cur.month)
            if diff == 0: return True
            try: btn_next = p.find_element(By.CSS_SELECTOR, ".p-datepicker-next, .ui-datepicker-next, .p-datepicker-next-icon")
            except: btn_next = None
            try: btn_prev = p.find_element(By.CSS_SELECTOR, ".p-datepicker-prev, .ui-datepicker-prev, .p-datepicker-prev-icon")
            except: btn_prev = None
            steps = min(abs(diff), 24)
            for _ in range(steps):
                if diff > 0 and btn_next:
                    safe_click(driver, btn_next, 0.12)
                elif diff < 0 and btn_prev:
                    safe_click(driver, btn_prev, 0.12)
                else:
                    break
                time.sleep(0.12)
            return True
    except:
        pass
    return False

def find_day_elements(driver, day, iso=None):
    xpaths = []
    if iso:
        xpaths.append(f"//*[@aria-label and contains(translate(@aria-label,'ABCDEFGHIJKLMNOPQRSTUVWXYZ','abcdefghijklmnopqrstuvwxyz'), '{iso}')]")
    xpaths.append(f"//div[contains(@class,'p-datepicker-panel') and not(contains(@style,'display:none'))]//*[normalize-space(text())='{day}']")
    xpaths.append(f"//table[contains(@class,'ui-datepicker-calendar')]//a[normalize-space(text())='{day}']")
    xpaths.append(f"//td[normalize-space(text())='{day}'] | //button[normalize-space(text())='{day}'] | //a[normalize-space(text())='{day}']")
    found = []
    for xp in xpaths:
        try:
            els = driver.find_elements(By.XPATH, xp)
            for e in els:
                if e.is_displayed(): found.append(e)
        except:
            continue
    return found

def click_day_exact(driver, input_id, target_date):
    try:
        el = WebDriverWait(driver, 8).until(EC.presence_of_element_located((By.ID, input_id)))
    except:
        return False
    opened = open_datepicker_button_for_input(driver, el)
    time.sleep(0.22)
    navigate_datepicker_to(driver, target_date)
    time.sleep(0.22)
    iso = target_date.isoformat()
    day = str(target_date.day)
    candidates = find_day_elements(driver, day, iso=iso)
    for c in candidates:
        if action_move_and_click(driver, c): return True
        if js_click(driver, c): return True
        if safe_click(driver, c): return True
    try:
        els = driver.find_elements(By.XPATH, f"//td[contains(normalize-space(.),'{day}') or normalize-space(.)='{day}']")
        for e in els:
            if e.is_displayed():
                if action_move_and_click(driver, e): return True
                if js_click(driver, e): return True
    except:
        pass
    try:
        el.click()
        el.send_keys("\t")
        time.sleep(0.15)
    except:
        pass
    return False

def set_date_both_clicks(driver, desde_date, hasta_date):
    try:
        for field_id, date_val in [("calendarFrom", desde_date), ("calendarTo", hasta_date)]:
            try:
                iel = WebDriverWait(driver, 6).until(EC.presence_of_element_located((By.ID, field_id)))
                driver.execute_script("arguments[0].value = '';", iel)
                iel.clear()
                iel.send_keys(date_val.strftime("%d/%m/%Y"))
                time.sleep(0.06)
            except:
                pass
        ok1 = click_day_exact(driver, "calendarFrom", desde_date)
        time.sleep(0.18)
        ok2 = click_day_exact(driver, "calendarTo", hasta_date)
        time.sleep(0.18)
        return ok1 or ok2
    except:
        return False

# ---------------- aplicar rango y buscar ----------------
def apply_range_and_search(driver, desde_dt, hasta_dt):
    set_date_both_clicks(driver, desde_dt, hasta_dt)
    time.sleep(0.25)
    for sel in ["//button[contains(normalize-space(.),'Buscar')]", "//button[contains(normalize-space(.),'Aplicar')]", "//button[contains(normalize-space(.),'Filtrar')]"]:
        try:
            btns = driver.find_elements(By.XPATH, sel)
            for b in btns:
                if b.is_displayed():
                    safe_click(driver, b, 0.35)
                    time.sleep(0.35)
                    return True
        except:
            continue
    try:
        driver.execute_script("""
            ['calendarFrom','calendarTo'].forEach(function(id){
               var el = document.getElementById(id);
               if(el){
                  el.dispatchEvent(new Event('input',{bubbles:true}));
                  el.dispatchEvent(new Event('change',{bubbles:true}));
               }
            });
        """)
    except:
        pass
    return True

# ---------------- extraer tabla ----------------
def extract_table(driver, timeout=15):
    try:
        table = WebDriverWait(driver, timeout).until(EC.presence_of_element_located((By.CSS_SELECTOR, "#pr_id_14-table, table.p-datatable-table")))
        rows = table.find_elements(By.CSS_SELECTOR, "tbody tr")
        data = []
        for r in rows:
            cells = r.find_elements(By.CSS_SELECTOR, "td")
            if not cells: continue
            polen = (cells[0].text or "").strip()
            acumulado = (cells[1].text or "").strip() if len(cells) > 1 else ""
            try:
                acumulado_num = float(acumulado.replace(".", "").replace(",", ".").strip()) if acumulado != "" else None
            except:
                acumulado_num = None
            data.append({"Polen": polen, "Acumulado": acumulado, "Acumulado_num": acumulado_num})
        return pd.DataFrame(data)
    except:
        return None

# ---------------- flujo principal ----------------

def recorrer_semanas_septiembre_octubre_2025(driver=None, out_dir="polen_acumulados_semanales_2025", out_filename="polen_acumulado_2025_todas_estaciones.csv", headless=False, pause_between=0.9):
    created = False
    if driver is None:
        driver = start_driver(headless=headless)
        created = True
    try:
        driver.get("https://www.polenes.com/home")
        time.sleep(1.2)

        # obtener estaciones
        estaciones = get_all_station_names(driver)
        print("Estaciones detectadas:", len(estaciones))
        os.makedirs(out_dir, exist_ok=True)

        # seleccionar todos los pólenes UNA sola vez antes de empezar
        ok_all = select_all_polens_once(driver, attempts=2)
        if not ok_all:
            print("Aviso: no se pudo confirmar selección completa de pólenes al inicio. El script seguirá pero puede faltar selección.")

        resumen = []
        filas_all = []  # acumulador de todas las filas para el CSV único

        for estacion in estaciones:
            print("\nEstación:", estacion)
            # seleccionar estación (NO tocar multiselect aquí)
            if not select_station(driver, estacion):
                print("  No se pudo seleccionar estación")
                resumen.append({"Estacion": estacion, "Estado": "no_select"})
                continue
            time.sleep(0.6)

            fecha = datetime.date(2025,8,25)
            while fecha < datetime.date(2025,11,1):
                desde = fecha
                hasta = fecha + datetime.timedelta(days=6)
                if hasta >= datetime.date(2025,11,1):
                    hasta = datetime.date(2025,10,31)
                print(f"  Semana: {desde.strftime('%d/%m/%Y')} -> {hasta.strftime('%d/%m/%Y')}")

                # aplicar rango y asegurar que desde != hasta (reintentos sobre calendarTo)
                apply_range_and_search(driver, desde, hasta)
                time.sleep(0.25)

                v_from, v_to = read_current_range_values(driver)

                retries = 0
                max_retries = 4
                while (v_from == v_to or v_from == "" or v_to == "") and retries < max_retries:
                    retries += 1
                    try:
                        click_day_exact(driver, "calendarTo", hasta)
                    except:
                        pass
                    try:
                        driver.execute_script("""
                            var el = document.getElementById('calendarTo');
                            if(el){
                                el.dispatchEvent(new Event('input',{bubbles:true}));
                                el.dispatchEvent(new Event('change',{bubbles:true}));
                            }
                        """)
                    except:
                        pass
                    time.sleep(0.35)
                    v_from, v_to = read_current_range_values(driver)

                fmt_from = desde.strftime("%d/%m/%Y")
                fmt_to = hasta.strftime("%d/%m/%Y")
                if (v_from == v_to or v_from == "" or v_to == "") or not (v_from == fmt_from and v_to == fmt_to):
                    print("    Aviso: las fechas quedaron iguales o no se pudieron fijar correctamente; se omite esta semana")
                    resumen.append({"Estacion": estacion, "Desde": desde.strftime("%d/%m/%Y"), "Hasta": hasta.strftime("%d/%m/%Y"), "Estado":"skipped_date_issue"})
                    fecha += datetime.timedelta(days=7)
                    time.sleep(0.18)
                    continue

                # asegurar actualización si las fechas ya son las esperadas
                for sel in ["//button[contains(normalize-space(.),'Buscar')]", "//button[contains(normalize-space(.),'Aplicar')]", "//button[contains(normalize-space(.),'Filtrar')]"]:
                    try:
                        btns = driver.find_elements(By.XPATH, sel)
                        for b in btns:
                            if b.is_displayed():
                                safe_click(driver, b, 0.35)
                                time.sleep(0.35)
                                break
                    except:
                        continue

                time.sleep(pause_between)

                df = extract_table(driver)
                if df is None or df.empty:
                    print("    Sin datos")
                    resumen.append({"Estacion": estacion, "Desde": desde.strftime("%d/%m/%Y"), "Hasta": hasta.strftime("%d/%m/%Y"), "Estado":"empty"})
                else:
                    df["Estacion"] = estacion
                    df["Desde"] = desde.strftime("%d/%m/%Y")
                    df["Hasta"] = hasta.strftime("%d/%m/%Y")
                    df["Semana"] = f"{desde.isocalendar()[1]:02d}"
                    filas_all.append(df)  # <-- aquí sólo acumulamos, no guardamos archivo por semana
                    print("    Extraído filas:", len(df))
                    resumen.append({"Estacion": estacion, "Desde": desde.strftime("%d/%m/%Y"), "Hasta": hasta.strftime("%d/%m/%Y"), "Estado":"ok", "Filas": len(df)})
                fecha += datetime.timedelta(days=7)
                time.sleep(0.18)

        # Al finalizar todas las estaciones y semanas, concatenar y guardar UN solo CSV
        if filas_all:
            master_df = pd.concat(filas_all, ignore_index=True)
            cols_order = ["Estacion", "Desde", "Hasta", "Semana", "Polen", "Acumulado", "Acumulado_num"]
            cols_present = [c for c in cols_order if c in master_df.columns] + [c for c in master_df.columns if c not in cols_order]
            master_df = master_df[cols_present]
            out_path = os.path.join(out_dir, out_filename)
            master_df.to_csv(out_path, index=False, encoding="utf-8-sig")
            print("\nGuardado CSV único:", out_path, "filas totales:", len(master_df))
        else:
            print("\nNo se extrajeron filas; no se generó CSV único.")

        return pd.DataFrame(resumen)
    except Exception as e:
        print("Error principal:", e)
        traceback.print_exc()
        return None
    finally:
        if created:
            try:
                driver.quit()
            except:
                pass

# ---------- Ejecución  ----------
driver = start_driver(headless=False)
resumen = recorrer_semanas_septiembre_octubre_2025(driver=driver, out_dir="polen_acumulados_semanales_2025", headless=False, pause_between=1.0)
print(resumen)
driver.quit()
